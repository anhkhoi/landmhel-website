<div class="container">
  <div class="page-header">
    <h1>Listings</h1>
  </div>
  <div class="row">
    <div class="well">
      <form>
        <fieldset>
          <legend>Advanced Search</legend>
          <div class="row">
            <div class="col-sm-3">
              <label for="select" class="">Neighborhood</label>
              <select class="form-control" id="select">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>
            <div class="col-sm-3">
              <label for="select" class="">Type</label>
              <select class="form-control" id="select">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>
            <div class="col-sm-3">
              <label for="select" class="">Bedrooms</label>
              <select class="form-control" id="select">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>
            <div class="col-sm-3">
              <label for="select" class="">Bathrooms</label>
              <select class="form-control" id="select">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
  <div class="row">
    <%= render partial: "listings/listing_block", locals: {listings: @listings} %>
  </div>
</div>



