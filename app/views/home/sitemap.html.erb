<% title "Site map" %>
<% description "Sitemap" %>
<% keywords "sitemap," %>

<div class="container">
  <div class="page-header">
    <h1>Sitemap</h1>
  </div>
  <div class="col-sm-3">
    <h2>Landmhel</h2>

    <% ApplicationController::MAIN_MENU.each do |menu_title| %>

      <p class="lead">
        <%= link_to menu_title.gsub(/_/, ' ').capitalize , (menu_title == 'home') ? "/" : "/" + menu_title, { onclick: "ga('send', 'event', 'sitemap', 'click', #{menu_title}" } %>
      </p>
    <% end %>

  </div>

  <div class="col-sm-3">
    <h2>Listings</h2>
    <% @listings.each do |listing|%>
      <p class="lead"><%= link_to listing.address, listing_details_path(listing)%></p>
    <% end %>
  </div>
</div>