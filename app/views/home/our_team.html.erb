<div class="container">
  <div class="page-header">
    <h1>Our Team</h1>
  </div>
  
    <% @agents.each do |agent| %>
      <div class="row agent">
        <div class="col-sm-3 agent-picture">
          <img src="<%= agent.avatar.url %>" style="width: 100%; height:100%" />
          <a class="btn btn-large btn-default" href="#" style="width: 100%;">Contact Me</a>
        </div>

        <div class="col-sm-9 agent-description">
          <h1><%= agent.to_s%></h1>
          <div class="well">
          <p><%= agent.description %></p>
          </div>

          <ul>
            <li class=""><i class="glyphicon glyphicon-phone-alt"></i>&nbsp; &nbsp; <%= number_to_phone(agent.phone, country_code: 1) %></li>
            <li> <i class="fa fa-facebook-square fa-lg"></i> &nbsp; &nbsp;Facebook </li>
            <li> <i class="fa fa-twitter fa-lg"></i> &nbsp; &nbsp;Facebook </li>
            <li> <i class="fa fa-linkedin fa-lg"></i> &nbsp; &nbsp;Facebook </li>
          </ul>
          
        </div>
      </div>
    <% end %>
    
    
    <!-- .glyphicon .glyphicon-earphone |  | .glyphicon .glyphicon-phone | .glyphicon .glyphicon-print | .glyphicon .glyphicon-phone-alt | .glyphicon .glyphicon-globe | .glyphicon .glyphicon-search -->
  



</div>